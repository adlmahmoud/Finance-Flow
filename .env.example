# FinanceFlow Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================
# Application Settings
# ============================================
APP_NAME=FinanceFlow
APP_VERSION=2.0.0
DEBUG=False

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite:///./data/finance_flow.db
DATABASE_ECHO=False

# ============================================
# Regional Settings
# ============================================
CURRENCY=EUR
CURRENCY_SYMBOL=â‚¬
DATE_FORMAT=%d/%m/%Y

# ============================================
# Bank API Configuration
# ============================================
# Options: mock, plaid, gocardless
BANK_API_PROVIDER=mock

# Get from https://plaid.com
BANK_API_KEY=

# Your bank API secret (if required)
BANK_API_SECRET=

# ============================================
# UI Configuration
# ============================================
THEME=dark
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800

# ============================================
# Budget Configuration
# ============================================
DEFAULT_MONTHLY_BUDGET=3000.0

# ============================================
# Security Settings
# ============================================
# IMPORTANT: Change this in production!
SECRET_KEY=dev-secret-key-change-in-production

# Hash algorithm for passwords
HASH_ALGORITHM=sha256

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
